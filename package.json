{
  "name": "pdf-compare",
  "version": "2026.1.1-rc1",
  "description": "Compare two PDF files and generate a visual diff report with highlighted differences",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "pdf-compare": "./lib/cli.js",
    "pdf-compare-setup": "./scripts/postinstall.js"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "setup": "node scripts/postinstall.js",
    "check": "node lib/cli.js --check",
    "test": "node lib/cli.js sample-files/original.pdf sample-files/modified.pdf -o sample-files/output.pdf",
    "compare": "node lib/cli.js",
    "pack": "npm pack --pack-destination dist"
  },
  "files": [
    "lib/",
    "python/comparator.py",
    "python/compare_pdf.py",
    "python/requirements.txt",
    "scripts/postinstall.js",
    "types/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "pdf",
    "compare",
    "diff",
    "visual",
    "comparison",
    "document",
    "pdf-diff",
    "pdf-compare"
  ],
  "author": "grananda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grananda/PDF-Compare.git"
  },
  "bugs": {
    "url": "https://github.com/grananda/PDF-Compare/issues"
  },
  "homepage": "https://github.com/grananda/PDF-Compare#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "publishConfig": {
    "access": "public"
  }
}
